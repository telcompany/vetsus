<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
	<title>Vetsus - Software de gestión veterinaria</title>
    <!-- Favicon icon -->
	<link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.png">
	<link rel="stylesheet" href="~/vendor/chartist/css/chartist.min.css">
    <!-- Vectormap -->
	<link href="~/vendor/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet">
	<link href="~/css/style.css" rel="stylesheet">
</head>
<body>
	<div id="main-wrapper">

		<!--**********************************
			Nav header start
		***********************************-->
		<div class="nav-header">
			<a asp-controller="Dashboard" asp-action="Index" class="brand-logo">
				<img class="logo-abbr" src="~/images/logo.png" alt="">
				<img class="logo-compact" src="~/images/logo-text.png" alt="">
				<img class="brand-title" src="~/images/logo-text.png" alt="">
			</a>

			<div class="nav-control">
				<div class="hamburger">
					<span class="line"></span><span class="line"></span><span class="line"></span>
				</div>
			</div>
		</div>
		<!--**********************************
			Nav header end
		***********************************-->
		<!--**********************************
			Header start
		***********************************-->
		<partial name="_HeaderPartial" />
		<!--**********************************
			Header end ti-comment-alt
		***********************************-->
		<!--**********************************
			Sidebar start
		***********************************-->
		<div class="dlabnav">
			<div class="dlabnav-scroll">
				<ul class="metismenu" id="menu">
					<li>
						<a asp-controller="Dashboard" asp-action="Index" class="ai-icon" aria-expanded="false">
							<i class="flaticon-381-television"></i>
							<span class="nav-text">Dashboard</span>
						</a>
					</li>
					<li>
						<a class="has-arrow ai-icon" href="javascript:void()" aria-expanded="false">
							<i class="flaticon-381-settings-2"></i>
							<span class="nav-text">Gestión</span>
						</a>
						<ul aria-expanded="false">
							<li><a asp-controller="User" asp-action="Index">Usuarios</a></li>
							<li><a asp-controller="Owner" asp-action="Index">Dueños</a></li>
							<li><a asp-controller="Vet" asp-action="Index">Doctores</a></li>
						</ul>
					</li>
				</ul>
				<div class="copyright">
					<p><strong>Vetsus</strong> © @DateTime.Now.Year Todos los derechos reservados</p>
				</div>
			</div>
		</div>
		<!--**********************************
			Sidebar end
		***********************************-->
        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <div class="container-fluid">
				@RenderBody()
            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->

		<!--**********************************
				Footer start
		***********************************-->
		<div class="footer">
			<div class="copyright">
				<p>Copyright © Desarrollado por <a href="http://naptek.io/" target="_blank">Naptek</a> @DateTime.Now.Year</p>
			</div>
		</div>
		<!--**********************************
				Footer end
		***********************************-->

	</div>
	<!--**********************************
		Main wrapper end
	***********************************-->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

	<script src="~/vendor/global/global.min.js"></script>
	<script src="~/vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
	<script src="~/vendor/chart.js/Chart.bundle.min.js"></script>
	<script src="~/js/custom.min.js"></script>
	<script src="~/js/dlabnav-init.js"></script>

	<!-- Chart piety plugin files -->
	@*<script src="~/vendor/peity/jquery.peity.min.js"></script>*@

	<!-- Apex Chart -->
	@*<script src="~/vendor/apexchart/apexchart.js"></script>*@


	<!-- Dashboard 1 -->
	@*<script src="~/js/dashboard/dashboard-1.js"></script>*@




	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
